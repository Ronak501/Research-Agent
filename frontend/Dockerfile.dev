# Development Dockerfile with hot reload
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json yarn.lock ./

# Install dependencies
RUN yarn install

# Copy rest of the app
COPY . .

# Expose port
EXPOSE 3000

# Enable hot reload
ENV CHOKIDAR_USEPOLLING=true
ENV FAST_REFRESH=true

# Start development server
CMD ["yarn", "start"]